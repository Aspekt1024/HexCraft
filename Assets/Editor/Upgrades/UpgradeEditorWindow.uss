Label {
    white-space: normal;
}

.root-container {
    color: black;
}


.active-button {
    color: white;
    background-color: #292d3a;
}

.hidden {
    display: none;
}

.header {
    color: whitesmoke;
    -unity-font-style: bold;
    font-size: 14px;
    
    height: 30px;
    -unity-text-align: middle-left;
}

.page {
}

.page-toolbar {
    display: flex;
    flex-direction: row;
    flex: auto;
}

.page-toolbar Button {
    margin: 0;
    padding: 3px;
    width: 100px;

    border-radius: 0;
    border-width: 1px 1px 0 1px;
    border-color: black;
}

.header-info {
    height: 23px;
    -unity-text-align: middle-center;
    margin: 0 10px;

    -unity-font-style: bold;

    border-width: 1px;
    border-color: gray;
}

/* Cost field styles */
.action-cost {
    display: flex;
    flex-direction: row;
    height: 23px;
    width: 150px;
    margin: auto;
}

.action-cost Label {
    color: red;
}

.cost-field {
    width: 25px;
    height: 17px;
    color: white;
}

.action-cost-purchasable Label {
    color: black;
}

.action-cost-unaffordable Label {
    color: black;
}

.action-cost-researched Label {
    color: black;
}